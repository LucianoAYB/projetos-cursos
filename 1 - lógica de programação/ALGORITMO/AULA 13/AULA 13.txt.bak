		PASSAGEM DE VALOR EM FUNÇÕES
			CALCULANDO FIBONACCI
			
			
				VAR
					C, T1, T2, T3: INTEIRO
					
				PROCEDIMENTO PROXIMOFIBONACCI(VAR A, B: INTEIRO)
					VAR
						//VARIÁVEL LOCAL "PROXIMOFIBONACCI"
						C: INTEIRO
				
					INICIO
					C := A + B
					ESCREVA C
					A := B
					B := C
				FIMPROCEDIMENTO
			
			
				INICIO
				
					T1 <- 0	
					ESCREVA (T1)
					T2 <- 1
					ESCREVA (T2)
					
					PARA C:=3 ATE 13 FACA
					
						PROXIMOFIBONACCI(T1, T2)
						
					FIMPARA
				
				
				
				//SERÁ ALTERADO O COMANDO "PROCEDIMENTO"
				//PARA "FUNCAO"
				//ADICIONADO A CLASSIFICAÇÃO DO VALOR DE RETORNO
				//" : INTEIRO", APÓS A DECLARAÇÃO DE VARIÁVEIS
				
				//SUBSTITUIR "FIMPROCEDIMENTO" 
				//POR "FIMFUNCAO"
				
				//NA FUNÇÃO, NÃO HÁ A NECESSIDADE DE EXECUTAR UM COMANDO
				//"ESCREVA", E HÁ A NECESSIDADE DE CRIAR UMA VARIÁVEL INTERNA
				//QUE RECEBA A SOMA DE N1 + N2
				//QUE SERÁ O RETORNO DA FUNCAO
				//ESCRITO DURANTE A ESTRUTURA "PARA"
				
				//E, NO ALGORITMO GLOBAL, 
				//DECLARAR UMA NOVA VARIÁVEL "T3", E, 
				//ATRIBUIR A ELA, "PROXIMOFIBONACCI(T1, T2)"
				
				//DADO QUE HÁ O COMANDO "VAR" DECLARADO NA FUNCAO
				//A PASSAGEM SERÁ POR REFERÊNCIA, E NÃO POR VALOR
				
				
				
				VAR
					C, T1, T2, T3: INTEIRO
					
				FUNCAO PROXIMOFIBONACCI(VAR A, B: INTEIRO):INTEIRO
					VAR
						//VARIÁVEL LOCAL "PROXIMOFIBONACCI"
						C: INTEIRO
				
					INICIO
					C := A + B
					A := B
					B := C
				RETORNE C
				
				FIMFUNCAO
			
			
				INICIO
				
					T1 <- 0	
					ESCREVA (T1)
					T2 <- 1
					ESCREVA (T2)
					
					PARA C:=3 ATE 10 FACA
					
						T3 <-PROXIMOFIBONACCI(T1, T2)
						ESCREVA (T3)
						
					FIMPARA
					
				//HOUVE UM ERRO
				//"FIMPROCEDIMENTO" PRECISARIA SER TROCADO POR
				//"FIMFUNCAO"
				
				//HOUVE UM ERRO
				//ESQUECI DE DECLARAR QUE T3 
				//PRECISA RECEBER PROXIMOFIBONACCI
				
				//CORRIGIDO, O PROGRAMA FUNCIONOU
				
			
			
			
