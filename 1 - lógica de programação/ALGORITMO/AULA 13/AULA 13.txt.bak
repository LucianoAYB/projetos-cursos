			PRÁTICA 01: 
			SOMAR 2 VALORES, COM FUNÇÕES
			
				ALGORITMO "SOMAFUNCAO"
				
				VAR
					V1, V2: INTEIRO
				
				FUNCAO SOMA(X, Y:INTEIRO): INTEIRO
					INICIO
						RETORNE X + Y
						
				FIMFUNCAO
				
				
				INICIO
				//SEÇÃO DE COMANDOS
				
				ESCREVA("DIGITE O PRIMEIRO VALOR: ")
				LEIA (V1)
				
				ESCREVA("DIGITE O SEGUNDO VALOR: ")
				LEIA (V2)
				
				S <- SOMA(V1, V2)
				
				ESCREVAL("A SOMA ENTRE ", V1, " E ", V2, " É IGUAL A: ", S)
			
			FIMALGORITMO
			
			
			
			
			PRÁTICA 02: 
			VERIFICAR SE UM NÚMERO É PAR OU ÍMPAR
			
				ALGORITMO "PAR OU IMPAR"
				
				VAR
					N: INTEIRO
					R: CARACTERE
				
				FUNCAO PAROUIMPAR(V:INTEIRO):CARACTERE
					INICIO
						SE (V%2 = 0) ENTAO
							RETORNE "PAR"
						SENAO
							RETORNE "ÍMPAR"
						FIMSE	
						
				FIMFUNCAO
				
				INICIO
					ESCREVA("DIGITE UM NUMERO: ")
					LEIA (N)
					R <- PAROUIMPAR(N)
					ESCREVA("O NUMERO ", N, " E UM VALOR ", R)
					
				FIMALGORITMO
				
				
				
			PRÁTICA 03: 
			FATORIAL FUNÇÃO
			
			ALGORITMO "FUNCAOFATORIAL"
			
			VAR 
				N, F: INTEIRO
			
			
			FUNCAO FATORIAL(V:INTEIRO):INTEIRO
				VAR
					C: INTEIRO
					R: INTEIRO
				INICIO
				
				R <- 1 
					PARA C <- 1 ATE V FACA
						R <- R * C		
					
					FIMPARA
					
				RETORNE R
					
				FIMFUNCAO
			
			
			INICIO
				ESCREVA("DIGITE UM NUMERO: ")
				LEIA (N)
				
				F <- FATORIAL(N)
				ESCREVAL("O VALOR DE ", N, " É: ", F)
				
			FIMALGORITMO
			
