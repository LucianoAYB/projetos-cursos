	PRÁTICA 04: 
	LER 10 NÚMEROS, E, SOMÁ-LOS. 
	
	//SOMADOR NUMÉRICO
	
	VAR
	CONT, S, MAIOR, N: INTEIRO
	INICIO
	
	CONT <- 1 
	S <- 0
	
	ENQUANTO (CONT <= 10) FACA
		ESCREVAL("DIGITE O ", CONT, "º VALOR: ")
		LEIA (N)
		SE (N > MAIOR) ENTAO
			MAIOR <- N
		FIMSE
		S <- S+N
		CONT <- CONT+1
	FIMENQUANTO
	ESCREVAL("A SOMA DE TODOS OS VALORES É: ", S)
	ESCREVAL("O MAIOR VALOR É: ", MAIOR)
	
