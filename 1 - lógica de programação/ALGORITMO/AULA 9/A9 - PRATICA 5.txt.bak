		//DESENVOLVA O ALGORITMO, E 
		//CONFORME AS VARIÁVEIS FOREM SURGINDO
		//DECLARE-AS
		
			ALGORITMO "SEM NOME"
				
			VAR 
			
				R, D, C: REAL
			
			INICIO
			
				C <- 1
				ENQUANTO (C <= 4)
					ESCREVA("QUAL O VALOR EM R$? ")
					LEIA (R)
					D <- R/2.20
					ESCREVA("O VALOR CONVERTIDO É US$", D:5:2)
					C <- C+1 
					
				FIMENQUANTO
				
			FIMALGORITMO
			//HOUVE UM ERRO, C FOI DECLARADO COMO REAL
			//AINDA ASSIM, O ALGORITMO FUNCIONOU
			
		
		PRATICA 5.2	
			CONVERSÃO DE MOEDAS 4X &
			PERGUNTAR AO USUÁRIO QUANTAS
			CONVERSÕES SERÃO REALIZADAS


			ALGORITMO "SEM NOME"
				
			VAR 
				
				C, Q: INTEIRO
				R, D: REAL
			
			INICIO
			
				C <- 1
				
				ESCREVA("QUANTAS VEZES VOCÊ QUER CONVERTER? ")
				LEIA(Q)
				
				
				ENQUANTO (C <= Q)
					ESCREVA("QUAL O VALOR EM R$? ")
					LEIA (R)
					D <- R/2.20
					ESCREVA("O VALOR CONVERTIDO É US$", D:5:2)
					C <- C+1 
					
				FIMENQUANTO
				
			FIMALGORITMO
			
			
