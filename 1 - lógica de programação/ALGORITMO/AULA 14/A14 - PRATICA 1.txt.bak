			LER 7 VALORES E MOSTRAR QUANTOS SÃO PARES
		
		//DESENVOLVA O ALGORITMO, E 
		//CONFORME AS VARIÁVEIS
		//PROCEDIMENTOS E FUNÇÕES 
		//FOREM SURGINDO 
		//DECLARE-AS 
		
		
			//UMA DAS GRANDES VANTAGENS DO VETOR 
			//É PODER RETORNAR A ÍNDICES ANTERIORES
			//E DIZER EM QUE POSIÇÃO ALGUM VALOR FOR DIGITADO 
		
			ALGORITMO "VALORES PARES"
			
			VAR 
				VAR: VETOR [1..7] DE INTEIRO
				I, TOTPAR: INTEIRO 
				
			
			INICIO
			
				PARA I <- 1 ATE 7 FACA
					LEIA(VAL[I])
					
					SE (VAL[I]%2 = 0) ENTAO
						TOTPAR <- TOTPAR+1
					FIMSE
					
				FIMPARA 
				
				ESCREVAL("O TOTAL DE PARED FOR", TOTPAR)
			
			FIMALGORITMO
			
		
