		PRÁTICA 03: 
		SEQUÊNCIA DE FIBONACCI
		
			VAR
			C, T1, T2, T3: INTEIRO
			
			INICIO
			
			T1 <- 0	
			ESCREVA (T1)
			T2 <- 1
			ESCREVA (T2)
			
			PARA C:=3 ATE 13 FACA
				T3 := T1 + T2
				ESCREVA T3
				T1 := T2
				T2 := T3
			FIMPARA
			
		TESTANDO DESENVOLVER UM PROCEDIMENTO: 
		
			VAR
			C, T1, T2, T3: INTEIRO
			
			PROCEDIMENTO PROXIMOFIBONACCI(VAR A, B: INTEIRO)
				VAR
					//VARIÁVEL LOCAL "PROXIMOFIBONACCI"
					C: INTEIRO
			
				INICIO
				C := A + B
				ESCREVA C
				A := B
				B := C
			FIMPROCEDIMENTO
			
			
			INICIO
			
			T1 <- 0	
			ESCREVA (T1)
			T2 <- 1
			ESCREVA (T2)
			
			PARA C:=3 ATE 13 FACA
			
				PROXIMOFIBONACCI(T1, T2)
				
			FIMPARA
			
