EX.P1: 
		APROVEITAMENTO DE UM ALUNO
		
		ELE É DEFINIDO NO VERBETE NOTA ESCOLAR, NO WIKIPEDIA
		
		HÁ UMA TABELA: 
		DE 90 A 100, NOTA A
		DE 80 A 89, NOTA B
		DE 70 A 79, NOTA C
		DE 60 A 69, NOTA D
		DE 50 A 59, NOTA E
		ABAIXO DE 50, NOTA F
		
		UM PROGRAMA QUE CALCULE A MÉDIA DE ACORDO COM 2 NOTAS
		
		RESPONDA QUAL É O APROVEITAMENTO. 
		
		algoritmo "semnome"
					// Função :
					// Autor :
					// Data : 12/01/2022
					// Seção de Declarações
					var
					   NOTA1, NOTA2, MEDIA_AL: REAL
					   
					   
					inicio
					// Seção de Comandos
					    ESCREVAL ("DIGITE A PRIMEIRA NOTA (DE 0 A 10): ")
								LEIA (NOTA1)
					    ESCREVAL ("DIGITE A SEGUNDA NOTA (DE 0 A 10): ")
								LEIA (NOTA2)
					    MEDIA_AL <- (NOTA1+NOTA2)/2
					
					    SE (MEDIA_AL >= 7) ENTAO
									ESCREVAL ("APROVADO, A MÉDIA FOI: ", MEDIA_AL)
								SENAO
									ESCREVAL ("REPROVADO, A MÉDIA FOI: ", MEDIA_AL)
								FIMSE
						
						SE (MEDIA_AL < 5) ENTAO
							ESCREVAL ("APROVEITAMENTO: F")
						SENAO
							SE (MEDIA_AL >=5) E (MEDIA_AL <= 5.9) ENTAO
							ESCREVAL ("APROVEITAMENTO: E")
							SENAO
								SE (MEDIA_AL >=6) E (MEDIA_AL <= 6.9) ENTAO
									ESCREVAL ("APROVEITAMENTO: D")
								SENAO
									SE (MEDIA_AL >=7) E (MEDIA_AL <= 7.9) ENTAO
										ESCREVAL ("APROVEITAMENTO: C")
									SENAO
										SE (MEDIA_AL >=8) E (MEDIA_AL <= 8.9) ENTAO
											ESCREVAL ("APROVEITAMENTO: B")
										SENAO
											SE (MEDIA_AL >=9) E (MEDIA_AL <= 10) ENTAO
												ESCREVAL ("APROVEITAMENTO: A")
											SENAO
												ESCREVAL ("DIGITE UMA MEDIA ENTRE 0 E 10")
											FIMSE
										FIMSE
									FIMSE
								FIMSE
							FIMSE
						FIMSE
					
							
					fimalgoritmo
					
					// HOUVE UM ERRO, EU NÃO COLOQUEI O TERMO "SENAO" EM CADA CONDICIONAL. 
					// HOUVE NECESSIDADE DE FORMATAR UMA LINHA, PARA QUE A MÉDIA
					// NÃO ESTEJA CONCATENADA AO LADO DO APROVEITAMENTO (MUDAR PARA "ESCREVAL"
					//O TERMO APROVADO OU NÃO). 
					
