		V@(1630)
			QUANTIDADE DE DEPENDENTES DE UM FUNCIONÁRIO
		
		//DESENVOLVA O ALGORITMO, E 
		//CONFORME AS VARIÁVEIS FOREM SURGINDO
		//DECLARE-AS
		
			//NESTE CASO, HÁ UMA ALTERNATIVA NO USO
			//DO ESCOLHA CASO
		
			ALGORITMO 
			
			VAR 
				NOME: CARACTERE
				SAL, NSAL: REAL
				DEP: INTEIRO
			INICIO
				ESCREVA("QUAL O NOME DO FUNCIONÁRIO? ")
				LEIA (NOME)
				ESCREVA("QUAL O SALÁRIO DO FUNCIONÁRIO? ")
				LEIA (SAL)
				ESCREVA("QUAL É A QUANTIDADE DE DEPENDENTES? ")
				LEIA (DEP)
				
				ESCOLHA DEP 
					CASO 0
						NSAL <- SAL*1.05
					CASO 1, 2, 3
						NSAL <- SAL*1.10
					CASO 4, 5, 6
						NSAL <- SAL*1.15
						
					OUTROCASO
						NSAL <- SAL*1.18
				
				FIMESCOLHA
			
			FIMALGORITMO
			
			
			
			
